@model FitAndFresh.Models.ItemInMenu

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}


<br />
<h2 class="text-info">Item Details</h2>
<br />

<form method="post" asp-action="Details">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemDescription" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="ItemDescription" class="form-control" readonly />
            </div>

            @*<textarea asp-for="ItemDescription" rows="4" cols="50"  /></textarea>*@

            <span asp-validation-for="ItemDescription" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProteinContent" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="ProteinContent" class="form-control" readonly />
            </div>
            <span asp-validation-for="ProteinContent" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemPrice" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="ItemPrice" class="form-control" readonly />
            </div>
            <span asp-validation-for="ItemPrice" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cat" class="col-form-label">Category</label>
            </div>
            <div class="col-9">
                <input asp-for="Cat" class="form-control" readonly />
            </div>
            <span asp-validation-for="Cat" class="text-danger"></span>
        </div>

        <div class="form-group row">
           
            <div class="col-6" >
                <img src=@Model.ItemPicture   class="img-thumbnail" />
            </div>
            <span asp-validation-for="ItemPicture" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-5 offset-2">
                *@* use offset here so that it appears next to form input tag, not below the label*@
                <partial name="_DetailsAndBackToListButton" model="Model.Id" />
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />

            </div>
        </div>
    </div>
</form>
