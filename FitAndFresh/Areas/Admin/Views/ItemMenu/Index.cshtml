@model IEnumerable<ItemInMenu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Items Menu</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ItemPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CatId)
                    </th>
                  
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(m => item.ItemPrice)
                </td>

                <td>
                    @Html.DisplayFor(m => item.Cat.Name)
                </td>

                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }



            </table>
        }
        else
        {
            <p>There are currently no items</p>
        }
    </div>
</div>


