
@model FitAndFresh.Models.Basket
@using FitAndFresh.ExtensionMethods

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<br />
<h2 class="text-info">Item Details</h2>
<br />

<form method="post" asp-action="Details">
    <input asp-for="ProductId" hidden />
    @* I have made this hidden as I do not need to display the product ID as this is not important to the customer,
        however I need the product ID so that I can send it with the post request when the user clicks add to basket*@

    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemInMenu.Name" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="ItemInMenu.Name" class="form-control" readonly />
            </div>
            <span asp-validation-for="ItemInMenu.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemInMenu.ItemDescription" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="ItemInMenu.ItemDescription" class="form-control" readonly />
            </div>

            @*<textarea asp-for="ItemDescription" rows="4" cols="50"  /></textarea>*@

            <span asp-validation-for="ItemInMenu.ItemDescription" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemInMenu.ProteinContent" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="ItemInMenu.ProteinContent" class="form-control" readonly />
            </div>
            <span asp-validation-for="ItemInMenu.ProteinContent" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemInMenu.ItemPrice" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="ItemInMenu.ItemPrice" class="form-control" readonly />
            </div>
            <span asp-validation-for="ItemInMenu.ItemPrice" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemInMenu.CatId" class="col-form-label">Category</label>
            </div>
            <div class="col-9">
                <input asp-for="ItemInMenu.Cat.Name" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Quantity" class="col-form-label">Quantity</label>
            </div>
            <div class="col-9">
                <input asp-for="@Model.Quantity" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
        </div>

        @*<div class="form-group row">

            <div class="col-6">
                <img src=@Model class="img-thumbnail" />
            </div>
            <span asp-validation-for="ItemInMenu.ItemPicture" class="text-danger"></span>
        </div>*@

        <div class="form-group row">
            <div class="col-4">
                <a asp-action="Index" class="btn btn-danger form-control">
                    Back
                </a>
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-success form-control text-white">
                    <i class="fas fa-plus"></i>
                    Basket
                </button>

            </div>
        </div>

        <div class="form-group row">
            <div class="col-md img-thumbnail">
              <img src="@Model.ItemInMenu.ItemPicture" class="img-thumbnail" />
            </div>            
        </div>

        <!--<div class="form-group row">
            <div class="col-5 offset-2">
                *-->@* use offset here so that it appears next to form input tag, not below the label*@
                <!--<partial name="_DetailsAndBackToListButton" model="Model.Id" />
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />

            </div>
        </div>-->

    </div>
</form>